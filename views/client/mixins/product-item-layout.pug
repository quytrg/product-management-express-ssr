mixin product-item-layout-1(item) 
    .col-3.mb-3
        .product-item
            .inner-image
                img(
                    src=item.thumbnail
                    alt=item.title
                )
            .inner-content
                a(
                    href=`/product/details/${item.slug}`
                    class="inner-title"
                ) #{item.title}
                .absolute-bot
                    .inner-price-new #{item.newPrice}$
                    .inner-price-old #{item.price}$
                    .inner-discount -#{item.discountPercentage}%
            if (item.featured == '1')
                .inner-featured Nổi bật

