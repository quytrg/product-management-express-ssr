mixin alert-success(time)
    if(messages.successMessage)
        div(
            class="alert alert-success"
            show-alert 
            data-time=time
        ) 
            span #{messages.successMessage} 
            span(
                close-alert
            ) x

mixin alert-error(time)
    if(messages.errorMessage)
        div(
            class="alert alert-danger"
            show-alert 
            data-time=time
        ) 
            span #{messages.errorMessage} 
            span(
                close-alert
            ) x
