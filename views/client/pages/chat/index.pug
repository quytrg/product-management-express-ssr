extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3
        .row 
            .col-12
                +box-head('Chat')

        .row
            .col-12
                .chat(my-id=user.id) 
                    .inner-body 
                        each chat in chats
                            if (chat.user_id === user.id)
                                .inner-outgoing
                                    .inner-content 
                                        | #{chat.content}
                            else 
                                .inner-incoming
                                    .inner-name #{chat.userInfo.fullName} 
                                    .inner-content 
                                        | #{chat.content}
                    .inner-foot 
                        form(
                            class='inner-form'
                            action=''
                            form-send-chat
                        )
                            input(
                                type='text'
                                placeholder='Type chat content...'
                                name='content'
                                autocomplete='off'
                            )
                            button.ms-1 
                                i(style='font-size: 26px;').fa-solid.fa-paper-plane

