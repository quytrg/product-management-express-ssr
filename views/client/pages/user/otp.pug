extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(3000)
    +alert-success(3000)

    .container.my-5
        .row.justify-content-center
            .col-4
                .card 
                    .card-header 
                        h3 Nhập mã OTP xác thực
                    .card-body 
                        form(
                            action='/user/password/otp'
                            method='POST'
                        )

                            div(class='mb-3')
                                label(for='email' class="form-label") Email
                                input(
                                    type='email'
                                    class='form-control'
                                    id='email'
                                    name='email'
                                    value=email 
                                    readonly
                                )
                            div(class='mb-3')
                                label(for='otp' class="form-label") Mã OTP
                                input(
                                    type='text'
                                    class='form-control'
                                    id='otp'
                                    name='otp'
                                    required
                                )
                            div(class='mt-3 text-end')
                                button(
                                    type='submit'
                                    class='btn btn-primary btn-block'
                                ) Xác nhận
