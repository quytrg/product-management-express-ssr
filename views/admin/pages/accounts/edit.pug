extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h1(class="mb-4") Chỉnh sửa thông tin tài khoản

    +alert-success(3000)
    +alert-error(3000)

    form(
        action=`/${prefixAdmin}/accounts/edit/${account.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        .mb-3
            label(for="fullName" class="form-label") Họ và tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=account.fullName
            )
        .mb-3
            label(for="email" class="form-label") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
                value=account.email
            )
        .mb-3
            label(for="password" class="form-label") Password *
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )
        .mb-3
            label(for="phone" class="form-label") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=account.phone
            )
        div(
            class="mb-3"
            upload-image
        )
            label(for="avatar" class="form-label") Avatar
            input(
                type="file"
                class="form-control"
                id="avatar"
                name="avatar"
                accept="image/*"
                input-image
            )
            img(
                src=account.avatar
                class="image-preview"
                preview-image
            )

        .mb-3
            label(for="role_id" class="form-label") Phân quyền
            select(
                name="role_id" 
                id="role_id" 
                class="form-control"
            )
                option(disabled) -- Select --
                each role in roles
                    option(
                        value=role.id
                        selected=(role.id === account.role_id ? true : false)
                    ) #{role.title}

        .mb-3.form-check.form-check-inline
            input(
                type="radio"
                class="form-check-input"
                id="active"
                name="status"
                value="active"
                checked=(account.status === 'active' ? true : false)

            ) 
            label(
                for="active"
                class="form-check-label"
            ) Hoạt động
        .mb-3.form-check.form-check-inline
            input(
                type="radio"
                class="form-check-input"
                id="inactive"
                name="status"
                value="inactive"
                checked=(account.status === 'inactive' ? true : false)
            )
            label(
                for="inactive"
                class="form-check-label"
            ) Dừng hoạt động
        .mb-3
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
    
