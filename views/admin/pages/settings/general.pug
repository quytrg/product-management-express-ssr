extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(3000)
    +alert-success(3000)
    h1 Cài đặt chung

    form(
        action=`/${prefixAdmin}/settings/general?_method=PATCH`
        method='POST'
        enctype="multipart/form-data"
        class="bg-light"
    )
        .mb-3
            label(for='websiteName' class='form-label') Tên website:
            input(
                type='text'
                class='form-control'
                id='websiteName'
                name='websiteName'
                value=(generalSettings ? generalSettings.websiteName : "")
            )
        div(
            class='mb-3'
            upload-image
        )
            label(for='logo' class='form-label') Logo
            input(
                type='file'
                class='form-control'
                id='logo'
                name='logo'
                accept='image/*'
                input-image
            )
            img(
                src=(generalSettings ? generalSettings.logo : "")
                class='image-preview'
                preview-image
            )
        .mb-3
            label(for='phone' class='form-label') Phone
            input(
                type='text'
                class='form-control'
                id='phone'
                name='phone'
                value=(generalSettings ? generalSettings.phone : "")
            )
        .mb-3
            label(for='email' class='form-label') Email
            input(
                type='email'
                class='form-control'
                id='email'
                name='email'
                value=(generalSettings ? generalSettings.email : "")
            )
        .mb-3
            label(for='address' class='form-label') Địa chỉ
            input(
                type='text'
                class='form-control'
                id='address'
                name='address'
                value=(generalSettings ? generalSettings.address : "")
            )
        .mb-3
            label(for='copyright' class='form-label') Copyright
            input(
                type='text'
                class='form-control'
                id='copyright'
                name='copyright'
                value=(generalSettings ? generalSettings.copyright : "")
            )
        .mb-3
            button(
                type='submit'
                class='btn btn-primary'
            ) Cập nhật
