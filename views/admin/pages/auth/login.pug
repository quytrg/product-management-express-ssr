extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main
    +alert-success(3000)
    +alert-error(3000)

    section.vh-100
        .container-fluid.h-custom
            .row.d-flex.justify-content-center.align-items-center.h-100
                .col-md-9.col-lg-6.col-xl-5
                    img.img-fluid(src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp', alt='Sample image')
                .col-md-8.col-lg-6.col-xl-4.offset-xl-1
                    form(
                        action=`/${prefixAdmin}/auth/login`
                        method="POST"
                    )
                        .d-flex.flex-row.align-items-center.justify-content-center.justify-content-lg-start
                            p.lead.fw-normal.mb-0.me-3 Sign in with
                            button.btn.btn-primary.btn-floating.mx-1
                                i.fab.fa-facebook-f
                            button.btn.btn-primary.btn-floating.mx-1
                                i.fab.fa-twitter
                            button.btn.btn-primary.btn-floating.mx-1
                                i.fab.fa-linkedin-in

                        .divider.d-flex.align-items-center.my-4
                            p.text-center.fw-bold.mx-3.mb-0 Or

                        // Email input
                        .form-outline.mb-4
                            input(type='email', id='form3Example3', class='form-control form-control-lg', placeholder='Enter a valid email address', required, name='email')
                            label.form-label(for='form3Example3') Email address

                        // Password input
                        .form-outline.mb-3
                            input(type='password', id='form3Example4', class='form-control form-control-lg', placeholder='Enter password', required, name='password')
                            label.form-label(for='form3Example4') Password

                        .d-flex.justify-content-between.align-items-center
                            // Checkbox
                            div.form-check.mb-0
                                input.form-check-input.me-2(type='checkbox', value='', id='form2Example3')
                                label.form-check-label(for='form2Example3') Remember me
                            a.text-body(href='#!') Forgot password?

                        .text-center.text-lg-start.mt-4.pt-2
                            button.btn.btn-primary.btn-lg(style='padding-left: 2.5rem; padding-right: 2.5rem') Login
                            
